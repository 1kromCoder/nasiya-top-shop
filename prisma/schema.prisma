generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  password  String
  email     String   @unique
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Debtor {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  note      String
  Seller    Seller?  @relation(fields: [sellerId], references: [id])
  sellerId  Int?
  star      Boolean? @default(false)
  Debts     Debts[]
  Sms       Sms[]
  Imgs      Image[]
  Phones    Phone[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Seller {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String
  balance   Int
  password  String
  img       String
  Debtor    Debtor[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Debts {
  id          Int          @id @default(autoincrement())
  productName String?
  date        DateTime
  time        String
  period      Int
  amount      Int
  note        String
  debtor      Debtor?      @relation(fields: [debtorId], references: [id])
  debtorId    Int?
  Payments    Payments[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  ImageDebts  ImageDebts[]
}

model Sms {
  id        Int       @id @default(autoincrement())
  text      String
  date      DateTime? @default(now())

  debtor    Debtor?   @relation(fields: [debtorId], references: [id])
  createdAt DateTime  @default(now())
  debtorId  Int?
}

model Example {
  id   Int    @id @default(autoincrement())
  text String
  isActive Boolean @default(true)
}

model Payments {
  id        Int      @id @default(autoincrement())
  amount    Int
  month     Int?
  endDate   DateTime @default(now())
  debts     Debts?   @relation(fields: [debtsId], references: [id])
  debtsId   Int?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id       Int     @id @default(autoincrement())
  img      String
  debtor   Debtor? @relation(fields: [debtorId], references: [id])
  debtorId Int?
}

model ImageDebts {
  id      Int    @id @default(autoincrement())
  img     String
  debts   Debts? @relation(fields: [debtsId], references: [id])
  debtsId Int?
}

model Phone {
  id       Int     @id @default(autoincrement())
  phone    String
  debtor   Debtor? @relation(fields: [debtorId], references: [id])
  debtorId Int?
}
